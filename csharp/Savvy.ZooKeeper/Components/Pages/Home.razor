@using Syncfusion.Blazor.Charts

@page "/"
@rendermode InteractiveServer

<PageTitle>Zoo Keeper Dashboard</PageTitle>

<SfAccumulationChart EnableSmartLabels="false" EnableBorderOnMouseMove="false" ID="drilldown" Title="Animal Health">
    <AccumulationChartEvents OnDataLabelRender="OnLabel"></AccumulationChartEvents>
    <AccumulationChartSeriesCollection>
        <AccumulationChartSeries DataSource="@PieChartPoints" XName="XValue" YName="YValue" PointColorMapping="Fill">
             <AccumulationChartEmptyPointSettings Mode="@Mode"></AccumulationChartEmptyPointSettings>
            <AccumulationDataLabelSettings Visible="true" Name="Text" Position="AccumulationLabelPosition.Outside"></AccumulationDataLabelSettings>
        </AccumulationChartSeries>
    </AccumulationChartSeriesCollection>
</SfAccumulationChart>

@inject ModelContext Database

<b>Attention Required</b>
<SfGrid DataSource="@Attention"></SfGrid>

