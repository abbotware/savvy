@page "/animals"
@inherits BaseGrid<Animal>
@rendermode InteractiveServer

<SfGrid DataSource="@Rows" AllowPaging="true" Toolbar="@(new string[] {"Add", "Edit" ,"Delete","Update","Cancel" })">
    <GridEvents OnActionBegin="OnGridActionBegin" TValue="Animal"></GridEvents>
    <GridEditSettings AllowAdding="true" AllowEditing="true" AllowDeleting="true" Mode="@EditMode.Dialog" Dialog="DialogParams">
        <Template>
            @{
                var row = (Animal)context;
            }

            <SfDataForm ID="GridForm" Model="@row" OnValidSubmit="OnFormValidSubmit">
                <FormButtons ></FormButtons>
                <FormValidator>
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                </FormValidator>
                <FormItems>
                    <FormAutoGenerateItems></FormAutoGenerateItems>
                </FormItems>
            </SfDataForm>

        </Template>
    </GridEditSettings>

    <GridColumns>
        <GridColumn Field=@nameof(Animal.Name) HeaderText="Name" Width="150"></GridColumn>
        <GridColumn Field="AnimalType.Name" HeaderText="Type"Width="150"></GridColumn>
        <GridColumn Field="CurrentState.Status" HeaderText="Status" Width="150"></GridColumn>
        <GridColumn Field="CurrentExhibit.Name" HeaderText="Exhibit" Width="150"></GridColumn>
        <GridColumn Field=@nameof(Animal.BirthDate) HeaderText="Birth" Width="150"></GridColumn>
    </GridColumns>
</SfGrid>


